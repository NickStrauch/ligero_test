<p id="notice"><%= notice %></p>

<h1>Listing Cigars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Manufacturer</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cigars.each do |cigar| %>
      <tr>
        <td><%= cigar.name %></td>
        <td><%= cigar.manufacturer %></td>
        <td><%= cigar.price %></td>
        <td><%= cigar.description %></td>
        <td><%= link_to 'Show', cigar %></td>
        <td><%= link_to 'Edit', edit_cigar_path(cigar) %></td>
        <td><%= link_to 'Destroy', cigar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

